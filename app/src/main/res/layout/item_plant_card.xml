<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Plant Image -->
        <ImageView
            android:id="@+id/ivPlantImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/plant_image"
            android:background="@color/light_gray"
            tools:src="@drawable/ic_plant_placeholder" />

        <!-- Plant Name -->
        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plant_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="16dp"
            android:paddingBottom="8dp"
            tools:text="Rose" />

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:paddingTop="0dp">

            <!-- Water Reminder Button -->
            <Button
                android:id="@+id/btnWaterReminder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/water_reminder"
                android:textSize="12sp"
                android:backgroundTint="@color/water_blue"
                android:textColor="@color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Fertilizer Reminder Button -->
            <Button
                android:id="@+id/btnFertilizerReminder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/fertilizer_reminder"
                android:textSize="12sp"
                android:backgroundTint="@color/fertilizer_green"
                android:textColor="@color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Remove Plant Button -->
            <Button
                android:id="@+id/btnRemovePlant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/remove"
                android:textSize="12sp"
                android:backgroundTint="@color/error_red"
                android:textColor="@color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Status/Reminder Info -->
        <TextView
            android:id="@+id/tvReminderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_reminders_set"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:padding="16dp"
            android:paddingTop="0dp"
            tools:text="Water reminder: Tomorrow at 9:00 AM" />

    </LinearLayout>

</androidx.cardview.widget.CardView>