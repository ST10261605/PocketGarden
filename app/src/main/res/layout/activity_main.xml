<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31572C"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="426dp"
        android:layout_height="392dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/getStartedbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pocketgarden_green_logo" />

    <TextView
        android:id="@+id/SplashScreenSubText"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="344dp"
        android:fontFamily="sans-serif-black"
        android:text="A virtual garden with all your plant needs"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/getStartedbtn"
        android:layout_width="241dp"
        android:layout_height="47dp"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#050315"
        android:text="Get Started"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>