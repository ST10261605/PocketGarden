<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdentifyPlantCameraFragment">

    <!-- CameraX preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="377dp"
        android:layout_height="503dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="386dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:background="#31572C"
        android:fontFamily="sans-serif-medium"
        android:text="Identify Plant"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="68dp"
        android:layout_height="74dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="29dp"
        android:backgroundTint="#31572C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/icons8_picture_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Test Button - Positioned next to the identify plant button -->
    <Button
        android:id="@+id/btnTestSample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Sample"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="29dp"
        android:backgroundTint="#4ECDC4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6" />

</androidx.constraintlayout.widget.ConstraintLayout>